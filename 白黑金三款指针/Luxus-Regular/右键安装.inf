[Version]
signature="$Chicago$"

[DefaultInstall]
CopyFiles = Scheme.Cur, Scheme.Txt
AddReg    = Scheme.Reg

[DestinationDirs]
Scheme.Cur = 10,"%CUR_DIR%"
Scheme.Txt = 10,"%CUR_DIR%"

[Scheme.Reg]
HKCU,"Control Panel\Cursors\Schemes","%SCHEME_NAME%",,"%10%\%CUR_DIR%\%pointer%,%10%\%CUR_DIR%\%help%,%10%\%CUR_DIR%\%work%,%10%\%CUR_DIR%\%busy%,%10%\%CUR_DIR%\%cross%,%10%\%CUR_DIR%\%Text%,%10%\%CUR_DIR%\%Hand%,%10%\%CUR_DIR%\%unavailable%,%10%\%CUR_DIR%\%Vert%,%10%\%CUR_DIR%\%Horz%,%10%\%CUR_DIR%\%Dgn1%,%10%\%CUR_DIR%\%Dgn2%,%10%\%CUR_DIR%\%move%,%10%\%CUR_DIR%\%alternate%,%10%\%CUR_DIR%\%link%,%10%\%CUR_DIR%\%pin%,%10%\%CUR_DIR%\%person%"
HKLM,"SOFTWARE\Microsoft\Windows\CurrentVersion\Runonce\Setup\","",,"rundll32.exe shell32.dll,Control_RunDLL main.cpl,,1"

[Scheme.Cur]
Normal.cur
Help.cur
Working.ani
Busy.ani
TextSelect.cur
Unavailable.cur
VerticalResize.cur
HorizontalResize.cur
DiagonalResizeNWSE.cur
DiagonalResizeNESW.cur
Move.cur
Link.cur
PrecisionSelect.cur
Handwriting.cur
Alternate.cur
LocationSelect.cur
PersonSelect.cur

[Scheme.Txt]

[Strings]
CUR_DIR       = "Luxus-hidpi"
SCHEME_NAME   = "Luxus-hidpi"
pointer       = "Normal.cur"
help          = "Help.cur"
work          = "Working.ani"
busy          = "Busy.ani"
text          = "TextSelect.cur"
unavailable   = "Unavailable.cur"
vert          = "VerticalResize.cur"
horz          = "HorizontalResize.cur"
dgn1          = "DiagonalResizeNWSE.cur"
dgn2          = "DiagonalResizeNESW.cur"
move          = "Move.cur"
link          = "Link.cur"
cross         = "PrecisionSelect.cur"
hand          = "Handwriting.cur"
alternate     = "Alternate.cur"
pin           = "LocationSelect.cur"
person        = "PersonSelect.cur"